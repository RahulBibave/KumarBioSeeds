<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/videoCard"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size5dp"
    android:layout_margin="@dimen/size10dp"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size150dp"
        android:weightSum="2.0">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3">
            <ImageView
                android:id="@+id/videoSingleThumbnail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:minHeight="@dimen/size100dp" />
            <ImageView
                android:textSize="@dimen/textSize20sp"
                android:textColor="@android:color/white"
                android:id="@+id/playIcon"
                android:background="#90000000"
                android:padding="@dimen/textSize20sp"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size100dp"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:src="@drawable/ic_play_circle_filled_black_24dp" />
            <TextView
                android:textSize="@dimen/textSize12sp"
                android:textColor="@android:color/white"
                android:id="@+id/SingleVideoLanguage1"
                android:background="#90000000"
                android:padding="@dimen/size5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_marginRight="@dimen/size10dp"
            android:layout_weight="1.0"
            android:gravity="center">
            <TextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:id="@+id/singleVideoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/textSize12sp"
                android:id="@+id/SingleVideoArea"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size30dp"
                android:text="shbvhjdsbkjdbkjwkjbkdjbvkjbvkjbvkbvkejbvkervbkerjvbkebrkbje" />
            <TextView
                android:textSize="@dimen/textSize12sp"
                android:id="@+id/SingleVideoLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:textSize="@dimen/textSize12sp"
                android:id="@+id/SingleVideoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_gravity="bottom"
        android:background="#ffc0c0c0"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip" />
</android.support.v7.widget.CardView>